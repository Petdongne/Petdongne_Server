{
  "number_of_shards": 1,
  "number_of_replicas": 1,
  "analysis": {
    "analyzer": {
      "korean": {
        "type": "custom",
        "char_filter": ["address_postfix_char_filter"],
        "tokenizer": "nori_tokenizer",
        "filter": [
          "synonyms_filter"
        ]
      }
    },
    "tokenizer": {
      "nori_tokenizer": {
        "type": "nori_tokenizer",
        "user_dictionary": "user_dict_address.txt"
      }
    },
    "char_filter": {
      "address_postfix_char_filter": {
        "type": "pattern_replace",
        "pattern": "([가-힣]+)(시|군|구|읍|면|동|리)(?=\\s|$)",
        "replacement": "$1"
      }
    },
    "filter": {
      "synonyms_filter": {
        "type": "synonym",
        "synonyms": [
          "경기도 => 경기",
          "경상남도 => 경상도, 경남",
          "경상북도 => 경북도, 경북",
          "광주광역 => 광주, 광주시",
          "대구광역 => 대구, 대구시",
          "대전광역 => 대전, 대전시",
          "부산광역 => 부산, 부산시",
          "서울특별 => 서울, 서울시",
          "세종특별자치 => 세종, 세종시",
          "울산광역 => 울산, 울산시",
          "인천광역 => 인천, 인천시",
          "전라남도 => 전남, 남도",
          "전북특별자치도 => 전북, 전라북도, 전북도",
          "제주특별자치도 => 제주, 제주도",
          "충청남도 => 충남, 충남도",
          "충청북도 => 충북, 충북도"
        ]
      }
    }
  }
}
