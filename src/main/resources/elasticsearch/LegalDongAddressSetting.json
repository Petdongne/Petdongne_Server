{
  "number_of_shards": 1,
  "number_of_replicas": 1,
  "analysis": {
    "analyzer": {
      "kor_address_analyzer": {
        "type": "custom",
        "tokenizer": "whitespace_tokenizer",
        "filter" : [
          "synonyms_filter",
          "edge_ngram_filter",
          "unique_filter"
        ]
      }
    },
    "tokenizer": {
      "whitespace_tokenizer": {
        "type": "whitespace"
      }
    }
  ,
    "filter": {
      "synonyms_filter": {
        "type": "synonym",
        "synonyms": [
          "경상남도 => 경상도, 경남, 경상남도",
          "경상북도 => 경북도, 경북, 경상북도",
          "광주광역시 => 광주시, 광주광역시",
          "대구광역시 => 대구시, 대구광역시",
          "대전광역시 => 대전시, 대전광역시",
          "부산광역시 => 부산시, 부산광역시",
          "서울특별시 => 서울시, 서울특별시",
          "세종특별자치시 => 세종시, 세종특별자치시",
          "울산광역시 => 울산시, 울산광역시",
          "인천광역시 => 인천시, 인천광역시",
          "전라남도 => 전남, 남도, 전라남도",
          "전북특별자치도 => 전라북도, 전북도, 전북특별자치도",
          "제주특별자치도 => 제주도, 제주특별자치도",
          "충청남도 => 충남, 충남도, 충청남도",
          "충청북도 => 충북, 충북도, 충청북도"
        ]
      },
      "edge_ngram_filter" : {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 10
      },
      "unique_filter" : {
        "type": "unique"
      }
    }
  }
}
